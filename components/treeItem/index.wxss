.tree-item{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}
.item-title{
  display: flex;
  align-items: center;
  width: 100%;
  opacity: 0.6;
  font-size: 28rpx;
}
.title-point{
  width: 6px;
  height: 6px;
  background-color: #999;
  border-radius: 12px;
  position: absolute;
  left:50%;
  margin-left: -3px;
}
.title-date{
  width: 50%;
  text-align: right;
  padding-right: 20px;
}
.title-total{
  width: 50%;
  text-align: left;
  padding-left:20px;
}
.item-info{
  width: 50%;
  margin-left: calc( 50% - 80rpx );
  display: flex;
  margin-top: 30rpx;
}
.hr{
  position: absolute;
  top: -30rpx;
  bottom: 0;
  border: 1rpx solid rgb(230, 221, 221);
  z-index: -1;
}
.info-content{
  display: flex;
  flex-direction: column;
}
.info-img{
  width: 80rpx;
  height: 80rpx;
}
.info-caption{
  font-size: 24rpx;
  opacity: 0.6;
}